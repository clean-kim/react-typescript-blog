<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kr.clean.reacttypescriptblog.vc.ApiMapper">

    <select id="selectBlogList" resultType="Blog">
        SELECT * FROM blog
    </select>

    <select id="selectBlogOne" resultType="Blog">
        SELECT * FROM blog WHERE no = #{no}
    </select>

    <insert id="insertBlog">
        INSERT INTO blog(title, content) VALUES(#{title}, #{content})
    </insert>
</mapper>